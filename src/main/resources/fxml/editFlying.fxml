                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                </TextField>
                <LocalDateTimeTextField fx:id="txtDate" allowNull="false" promptText="Date">
                    <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                </LocalDateTimeTextField>
                <TextField fx:id="txtCity" promptText="City">
                    <VBox.margin>
