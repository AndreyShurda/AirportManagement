    <center>
        <VBox prefHeight="400.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="txtNumFlight" maxWidth="120.0" prefHeight="31.0" prefWidth="120.0" promptText="%flight_number">
